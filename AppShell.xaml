<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Organizador_Apollo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Organizador_Apollo.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Organizador_Apollo">

    <TabBar>
        <ShellContent
        Title="Materiales"
        ContentTemplate="{DataTemplate views:Materials}"
        Icon="materials.svg"/>
        <ShellContent
        Title="Secciones"
        ContentTemplate="{DataTemplate views:Classifications}"
        Icon="classification.svg"/> 
        <ShellContent
        Title="Acerca De"
        ContentTemplate="{DataTemplate views:About}"
        Icon="about.svg"/>
    </TabBar>

</Shell>
